<p id="notice"><%= notice %></p>

<h1>Department Academic Charges</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Section</th>
      <th>Subject</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @academic_charges.each do |academic_charge| %>
      <tr>
        <td><%= academic_charge.teacher_career_id %></td>
        <td><%= academic_charge.section_id %></td>
        <td><%= academic_charge.subject_id %></td>
        <td><%= academic_charge.observation %></td>
        <td><%= link_to 'Show', department_academic_charge_path(academic_charge) %></td>
        <td><%= link_to 'Edit', edit_department_academic_charge_path(academic_charge) %></td>
        <td><%= link_to 'Destroy', department_academic_charge_path(academic_charge), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

