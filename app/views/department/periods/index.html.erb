<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  <i class="fas fa-home"></i>
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  Inicio
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to department_root_path do %>
                  Panel <%= @career.name %>
                <% end %>
              </li>
              <li class="breadcrumb-item active" aria-current="page">Asignaturas</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
          <%= link_to 'Nueva', new_staff_subject_path, class: "btn btn-neutral" %>
        </div>
      </div>
    </div>
  </div>
</div>
<p id="notice"><%= notice %></p>

<h1>Department Periods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= period.start %></td>
        <td><%= period.finish %></td>
        <td><%= period.status %></td>
        <td><%= link_to 'Show', department_period_path(period) %></td>
        <td><%= link_to 'Edit', edit_department_period_path(period) %></td>
        <td><%= link_to 'Destroy', department_period_path(period), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department Period', new_department_period_path %>
