<p id="notice"><%= notice %></p>

<h1>Department Periods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start</th>
      <th>Finish</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.name %></td>
        <td><%= period.start %></td>
        <td><%= period.finish %></td>
        <td><%= period.status %></td>
        <td><%= link_to 'Show', department_period_path(period) %></td>
        <td><%= link_to 'Edit', edit_department_period_path(period) %></td>
        <td><%= link_to 'Destroy', department_period_path(period), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

