<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  <i class="fas fa-home"></i>
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  Inicio
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to department_root_path do %>
                  Panel <%= @career.name %>
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to department_periods_path do %>
                  Periodos
                <% end %>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                <%= @period.name %>
              </li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
          <%= link_to 'Editar', edit_department_period_path(id: @period.id), class: "btn btn-neutral" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt--6">
  <section class="card">
    <div class="card-header border-0">
      <h1 class="mb-0" ><%= @period.name %></h1>
    </div>
    <div class="card-body">
      <div class="">
        <h3 class="h6">Nombre</h3>
        <p><%= @period.name %></p>
      </div>
      <div class="">
        <h3 class="h6">Inicio</h3>
        <p><%= @period.name %></p>
      </div>
      <div class="">
        <h3 class="h6">Fin</h3>
        <p><%= @period.name %></p>
      </div>
      <div class="">
        <h3 class="h6">Estado</h3>
        <% if @period.status %>
          <p class="text-success">Activo</p>
        <% else %>
          <p class="text-danger">Inactivo</p>
        <% end %>
      </div>
    </div>
  </section>
</div>