<div class="min-vh-100 d-flex justify-content-center align-items-center">
  <div class="container"  style="max-width: 20rem;">
    <div class="d-flex justify-content-center mb-4">
      <%= image_tag 'upttmbi-logo.svg' %>
    </div>
    <h1 class="text-center mb-4">Iniciar sesión</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email_upttmbi", class: 'form-control', placeholder: 'Correo' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Contraseña' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, 'Recordarme',class: 'form-check-label' %>
        </div>
      <% end %>

      <div class="d-grid gap-2">
        <%= f.submit "Ingresar", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>