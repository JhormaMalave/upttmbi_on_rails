<div class="container pt-4">
  <section>
    <div class="d-flex justify-content-end mb-3">
      <%= link_to 'Usuarios', staff_users_path, class: 'btn btn-link' %>
      <%= link_to 'Editar', edit_staff_user_path(@user), class: 'btn btn-warning' %>
    </div>
    <h1 class="display-3"><%= @user.email %></h1>
    <h2 class="text-muted mb-4">Informaci√≥n</h2>
    <div class="">
      <h3 class="h6">Correo</h3>
      <p><%= @user.email %></p>
    </div>
  </section>

  <hr />
  <% if @user.careers.any? %>
    <section>
      <h2>Departamentos</h2>
      <p class="text-muted mb-4">Departamentos a los que el usuario tendra acceso</p>
      <div class="d-flex flex-row ">
      <% @user.careers.each do |career|%>
        <div class="card me-3 border-success text-success">
          <div class="card-body">
            <h3 class="card-title h5"><%= career.name %></h3>
            <div class="card-subtitle mb-2 text-muted">Docentes: <%= career.teachers.count %></div>
            
          </div>
        </div>
      <% end %>
      </div>
    </section>
  <% end %>
</div>