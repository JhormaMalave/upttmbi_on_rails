<%= form_with(model: [:staff, teacher_degree]) do |form| %>
  <% if teacher_degree.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(teacher_degree.errors.count, "error") %> prohibited this teacher_degree from being saved:</h2>

      <ul>
        <% teacher_degree.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, 'Nombre', class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>


  <div class="mb-3">
    <%= form.label :degree_type, 'Tipo de estudio', class: 'form-label' %>
    <%= form.select :degree_type, ['Pre-Grado', 'Post-Grado', 'Curso'], {}, class: 'form-select'  %>
  </div>

  <div class="mb-3">
    <%= form.label :teacher_id, 'Docente', class: 'form-label' %>
    <%= form.collection_select :teacher_id, Teacher.where(status: true), :id, :name, {}, class: 'form-select' %>
  </div>

  <div class="form-check form-switch mb-3">
    <%= form.check_box :status, class: 'form-check-input', checked: true %>
    <%= form.label :status, 'Estado', class: 'form-check-label' %>
  </div>


  <div class="actions d-flex flex-row-reverse mb-3">
    <%= form.submit 'Enviar', class: 'btn btn-primary' %>
  </div>
<% end %>
