<div class="container">
  <h1 class="display-1">Asignaturas</h1>
  
  <section>
    <div class="d-flex justify-content-between align-items-center">
      <h2>Asignaturas registradas</h2>
      <%= link_to 'Nuevo', new_staff_subject_path, class: 'btn btn-outline-primary' %>
    </div>
    <table class="mt-4 table table-borderless table-hover table-bordered">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>UC</th>
          <th>Carrera</th>
          <th>Trayecto</th>
          <th>Estado</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.curricular_units %></td>
            <td><%= subject.career.name %></td>
            <td><%= subject.course.name %></td>
            <td>
              <% if subject.status %>
                <span class="text-success">Activo</span>
              <% else %>
                <span class="text-danger">Inactivo</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Ver', staff_subject_path(subject) %> |
              <%= link_to 'Editar', edit_staff_subject_path(subject) %> |
              <%= link_to 'Eliminar', staff_subject_url(subject), method: :delete, data: { confirm: 'Estas seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
<br>

<%= link_to 'New Staff Subject', new_staff_subject_path %>
