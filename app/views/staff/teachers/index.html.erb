<div class="container">
  <h1 class="display-1">Docentes</h1>
  
  <section>
    <div class="d-flex justify-content-between align-items-center">
      <h2>Docentes registrados</h2>
      <%= link_to 'Nuevo', new_staff_teacher_path, class: 'btn btn-outline-primary' %>
    </div>
    <table class="mt-4 table table-borderless table-hover table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Identificaci√≥n</th>
          <th>Nombres</th>
          <th>Capacitado</th>
          <th>Estado</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.id %></td>
            <td><%= teacher.id_type.name %> - <%= teacher.id_number %></td>
            <td><%= teacher.surname %> <%= teacher.name %></td>
            <td>
              <% teacher.careers.each do |career| %>
                <%= career.name %>
              <% end %>
            </td>
            <td>
              <% if teacher.status %>
                <span class="text-success">Activo</span>
              <% else %>
                <span class="text-danger">Inactivo</span>
              <% end %>
            </td>
            <td>
            <%= link_to 'Mostrar', staff_teacher_path(teacher) %> | 
            <%= link_to 'Editar', edit_staff_teacher_path(teacher) %> | 
            <%= link_to 'Eliminar', staff_teacher_path(teacher), method: :delete, data: { confirm: 'Estas seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
