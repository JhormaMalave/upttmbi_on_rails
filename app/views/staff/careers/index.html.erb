<div class="container">
  <h1 class="display-1">Carreras</h1>
  
  <section>
    <div class="d-flex justify-content-between align-items-center">
      <h2>Carreras registradas</h2>
      <%= link_to 'Nuevo', new_staff_career_path, class: 'btn btn-outline-primary' %>
    </div>
    <table class="mt-4 table table-borderless table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Docentes</th>
          <th>Docentes activos</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @careers.each do |career| %>
          <tr>
            <td><%= career.name %></td>
            <td><%= career.teachers.count %></td>
            <td><%= career.teachers.where(status: true).count %></td>
            <td>
            <%= link_to 'Ver', staff_career_path(career) %>
            <%= link_to 'Editar', edit_staff_career_path(career) %>
            <%= link_to 'Eliminar', staff_career_url(career), method: :delete, data: { confirm: 'Estas seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>
