<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  <i class="fas fa-home"></i>
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  Inicio
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to staff_root_path do %>
                  Panel administrativo
                <% end %>
              </li>
              <li class="breadcrumb-item active" aria-current="page">Carreras</li>
            </ol>
          </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
          <%= link_to 'Nueva', new_staff_career_path, class: "btn btn-neutral" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt--6">
  <section class="card">
    <div class="card-header border-0">
      <h2 class="mb-0" >Carreras registradas</h2>
    </div>
    <table class="table table-borderless table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Docentes</th>
          <th>Docentes activos</th>
          <th>Opciones</th>
        </tr>
      </thead>
      <tbody>
        <% @careers.each do |career| %>
          <tr>
            <td><%= career.name %></td>
            <td><%= career.teachers.count %></td>
            <td><%= career.teachers.where(status: true).count %></td>
            <td>
            <%= link_to 'Ver', staff_career_path(career) %>
            <%= link_to 'Editar', edit_staff_career_path(career) %>
            <%= link_to 'Eliminar', staff_career_url(career), method: :delete, data: { confirm: 'Estas seguro?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</div>