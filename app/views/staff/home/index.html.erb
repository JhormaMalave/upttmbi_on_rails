<!-- Header -->
<div class="header bg-primary pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
          <nav aria-label="breadcrumb" class="d-none d-md-inline-block ml-md-4">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  <i class="fas fa-home"></i>
                <% end %>
              </li>
              <li class="breadcrumb-item">
                <%= link_to root_path do %>
                  Inicio
                <% end %>
              </li>
              <li class="breadcrumb-item active" aria-current="page">Panel administrativo</li>
            </ol>
          </nav>
        </div>
        
      </div>
      <!-- Card stats -->
      <div class="row">
        <div class="col-xl-3 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Total de docentes</h5>
                  <span class="h2 font-weight-bold mb-0"><%= @teacher_count %></span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-red text-white rounded-circle shadow">
                    <i class="ni ni-single-02"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"><%= @teacher_active_count %></span>
                <span class="text-nowrap">Activos</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Total de usuarios</h5>
                  <span class="h2 font-weight-bold mb-0"><%= @user_count %></span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-orange text-white rounded-circle shadow">
                    <i class="ni ni-circle-08"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"><%= @user_admin_count %></span>
                <span class="text-nowrap">Administradores</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">PNFs Registrados</h5>
                  <span class="h2 font-weight-bold mb-0"><%= @career_count %></span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-green text-white rounded-circle shadow">
                    <i class="ni ni-collection"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"><%= @career_count %></span>
                <span class="text-nowrap">Activos</span>
              </p>
            </div>
          </div>
        </div>
        <div class="col-xl-3 col-md-6">
          <div class="card card-stats">
            <!-- Card body -->
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <h5 class="card-title text-uppercase text-muted mb-0">Asignaturas registradas</h5>
                  <span class="h2 font-weight-bold mb-0"><%= @subject_count %></span>
                </div>
                <div class="col-auto">
                  <div class="icon icon-shape bg-gradient-info text-white rounded-circle shadow">
                    <i class="ni ni-book-bookmark"></i>
                  </div>
                </div>
              </div>
              <p class="mt-3 mb-0 text-sm">
                <span class="text-success mr-2"> <%= @subject_active_count %></span>
                <span class="text-nowrap">Activas</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
  <div class="row">
    <div class="col-xl-8">
      <div class="card">
        <div class="card-header border-0">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0">Ultimos docentes registrados</h3>
            </div>
            <div class="col text-right">
              
              <%= link_to 'Ver mas', staff_teachers_path, class: 'btn btn-sm btn-primary' %>
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <!-- Projects table -->
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col">Identificacion</th>
                <th scope="col">Nombres</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Estado</th>
              </tr>
            </thead>
            <tbody>           
              <% 5.times do |index| %>
                <% if @teachers[index] %>
                  <tr>
                    <th scope="row">
                      <%= @teachers[index].id_type.name %> - <%= @teachers[index].id_number%>
                    </th>
                    <td>
                      <%= @teachers[index].name %>
                    </td>
                    <td>
                      <%= @teachers[index].surname %>
                    </td>
                    <td>
                      <% if @teachers[index].status %>
                        <i class="fas fa-arrow-up text-success mr-3"></i> Activo
                      <% else %>
                        <i class="fas fa-arrow-down text-warning mr-3"></i> Inactivo
                      <% end %>
                    </td>
                  </tr>
                <% else %>
                  <tr>
                    <th colspan="4" class="text-center text-muted">No has registrado docente</th>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-xl-4">
      <div class="card">
        <div class="card-header border-0">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0">Usuarios</h3>
            </div>
            <div class="col text-right">
              <%= link_to 'Ver mas', staff_users_path, class: 'btn btn-sm btn-primary' %>
            </div>
          </div>
        </div>
        <div class="table-responsive">
          <!-- Projects table -->
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col">Correo</th>
                <th scope="col">Departamentos</th>
                <th scope="col">Administrador</th>                
              </tr>
            </thead>
            <tbody>
              <% 5.times do |index| %>
                <% if @users[index] %>
                  <tr>
                    <th scope="row">
                      <%= @users[index].email %>
                    </th>
                    <td>
                      <%= @users[index].careers.count %>
                    </td>
                    <td>Si</td>
                  </tr>
                <% else %>
                  <tr>
                    <th colspan="3" class="text-center text-muted">No has registrado usuario</th>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>